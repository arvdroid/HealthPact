<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
    <shape>
      <corners android:radius="3dip" />
      
      <gradient
        android:angle="270"
        android:centerColor="@color/metatallic"
        android:centerY="0.5"
        android:endColor="@color/metatallic"
        android:startColor="@color/metatallic" />
    </shape>
  </item>
  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="3dip" />
          <gradient
            android:angle="0"
            android:endColor="@color/blueApp"
            android:startColor="@color/blueApp" />
      </shape>
    </clip>
  </item>
</layer-list>
