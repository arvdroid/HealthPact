<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/states_selector_list">

    <TextView
        android:id="@+id/pftvUserPlanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="PlanName" />

    <TextView
        android:id="@+id/pftvUserPlanStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="StartDate" />

    <ProgressBar
        android:id="@+id/pfpbUserPlanProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_below="@+id/pftvUserPlanName"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
       	android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:progressDrawable="@drawable/custom_progressbar"/>

    <TextView
        android:id="@+id/pftvUserPlanDurationLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pftvUserPlanStartDate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"  
        android:text="DurationLeft" />

</RelativeLayout>
