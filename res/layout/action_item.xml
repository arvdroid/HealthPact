<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/states_selector_list">
    
    <TextView
        android:id="@+id/tvUserActionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Action Name" />
    
    <TextView
        android:id="@+id/tvAiUserActionPerDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserActionName"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="PerDay"  />

    <ToggleButton
        android:id="@+id/tbactionDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvUserActionName"
        android:background="@drawable/custom_action_done"
        android:checked="false"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:textOff=""
        android:textOn="" />
</RelativeLayout>
