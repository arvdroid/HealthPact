<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="200dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/apLblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/apEtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="@+id/apLblName"
        android:ems="10" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/apLblExpertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="@+id/apLblName"
        android:layout_below="@+id/apLblName"
        android:layout_marginTop="20dp"
        android:text="Expertise" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <EditText
        android:id="@+id/apEtExpertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/apEtName"
        android:ems="10" >        
    </EditText>
    
    <TextView
        android:id="@+id/apLblLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="@+id/apLblName"
        android:layout_below="@+id/apLblExpertise"
        android:layout_marginTop="20dp"
        android:text="Location" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <EditText
        android:id="@+id/apEtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/apEtExpertise"
        android:ems="10" >        
    </EditText>
    
    <TextView
        android:id="@+id/apLblDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="@+id/apLblName"
        android:layout_below="@+id/apLblLocation"
        android:layout_marginTop="20dp"
        android:text="Description" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/apEtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/apLblDescription"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="5"
        android:gravity="top"
        android:scrollbars="vertical" />
    
     <Button
        android:id="@+id/aABDone"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/apEtDescription"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Done"        
        android:background="@drawable/action_button_layout" />

</RelativeLayout>
